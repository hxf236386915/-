<view class="container">
  <!-- 用户信息 -->
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatarUrl || '/static/images/default-avatar.png'}}" />
    <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
  </view>

  <!-- 功能卡片 -->
  <view class="card-list">
    <!-- 待办事项卡片 -->
    <view class="card" bindtap="goToTodo">
      <view class="card-header">
        <text class="card-title">待办事项</text>
        <text class="card-count">{{todoCount}}</text>
      </view>
      <view class="card-content">
        <text>您有 {{todoCount}} 个待办事项需要处理</text>
      </view>
    </view>

    <!-- 最近笔记卡片 -->
    <view class="card">
      <view class="card-header">
        <text class="card-title">最近笔记</text>
      </view>
      <view class="card-content">
        <view class="note-list">
          <view 
            class="note-item" 
            wx:for="{{recentNotes}}" 
            wx:key="id"
            bindtap="viewNoteDetail"
            data-id="{{item.id}}"
          >
            <view class="note-title">{{item.title}}</view>
            <view class="note-content">{{item.content}}</view>
            <view class="note-time">{{item.createTime}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view> 