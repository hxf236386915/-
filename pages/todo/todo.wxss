.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.add-todo {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.todo-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.add-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0;
}

.todo-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.todo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.todo-item:last-child {
  border-bottom: none;
}

.todo-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.todo-content text {
  font-size: 28rpx;
  color: #333;
}

.completed .todo-content text {
  color: #999;
  text-decoration: line-through;
}

.todo-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.todo-time {
  font-size: 24rpx;
  color: #999;
} 