.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  background-color: #f8f9fa;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.login-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.login-btn.loading {
  opacity: 0.8;
  background: #07c160;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.button-hover {
  opacity: 0.9;
} 