.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx;
}

.todo-detail {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-wrapper {
  flex: 1;
  margin-right: 30rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  width: 100%;
  min-height: 80rpx;
}

.status {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #f8f9fa;
}

.status text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 分段样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 图片列表样式 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.image-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-loading text {
  color: #fff;
  font-size: 24rpx;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #f8f9fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.add-image icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 附件列表样式 */
.file-list {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 20rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  flex: 1;
}

.file-loading {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.add-file {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 2rpx dashed #ddd;
}

.add-file text {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
} 